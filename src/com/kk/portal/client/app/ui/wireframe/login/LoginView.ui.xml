<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

	<g:HTMLPanel styleName="login-view">
		<g:HTMLPanel styleName="logo">

			<g:InlineLabel ui:field="productNameLbl" styleName="name"/>

			<g:FormPanel ui:field="form">
				<g:VerticalPanel styleName="login-panel">

					<g:cell>
						<g:Label ui:field="formCaption" styleName="header"/>
					</g:cell>

					<g:cell>
						<g:HTMLPanel styleName="error-container">
							<g:Label ui:field="error" styleName="error"/>
						</g:HTMLPanel>
					</g:cell>

					<g:cell>
						<g:Grid styleName="control-group">

							<g:row>
								<g:customCell>
									<g:InlineLabel ui:field="usernameLbl"/>
								</g:customCell>
								<g:customCell>
									<g:TextBox ui:field="username"/>
								</g:customCell>
							</g:row>

							<g:row>
								<g:customCell>
									<g:InlineLabel ui:field="passwordLbl"/>
								</g:customCell>
								<g:customCell>
									<g:PasswordTextBox ui:field="password"/>
								</g:customCell>
							</g:row>

							<g:row>
								<g:customCell>
									<g:InlineLabel ui:field="stayLbl"/>
								</g:customCell>
								<g:customCell>
									<g:CheckBox ui:field="stay"/>
								</g:customCell>
							</g:row>

						</g:Grid>
					</g:cell>

					<g:cell>
						<b:SubmitButton ui:field="ok" block="true"/>
					</g:cell>

				</g:VerticalPanel>
			</g:FormPanel>

		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 